@model ResumeMaker.Models.Resume

@{
    ViewData["Title"] = $"{Model.FullName} - Resume";
    var theme = (string)(ViewBag.Theme ?? "minimal");
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <h2 class="mb-0">Resume Preview</h2>
        <div class="d-flex align-items-center gap-3">
            <div class="btn-group" role="group" aria-label="Select resume theme">
                <a class="btn btn-secondary @(theme=="minimal"?"active":"")" asp-action="View" asp-route-id="@Model.Id" asp-route-theme="minimal">Minimal</a>
                <a class="btn btn-secondary @(theme=="classic"?"active":"")" asp-action="View" asp-route-id="@Model.Id" asp-route-theme="classic">Classic</a>
                <a class="btn btn-secondary @(theme=="modern"?"active":"")" asp-action="View" asp-route-id="@Model.Id" asp-route-theme="modern">Modern</a>
            </div>
            <button onclick="window.print()" class="btn btn-success">Print / Save as PDF</button>
            <a asp-action="Edit" asp-route-resumeId="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-cancel">Back to List</a>
        </div>
    </div>

    <!-- Resume Preview -->
    <main class="resume-preview theme-@theme" itemscope itemtype="https://schema.org/Person">
        <!-- Header -->
        <header class="resume-header">
            <h1 itemprop="name">@Model.FullName</h1>
            <div class="resume-contact">
                <span itemprop="email"><i class="bi bi-envelope me-1"></i>@Model.Email</span>
                <span itemprop="telephone"><i class="bi bi-telephone me-1"></i>@Model.CellPhoneNumber</span>
                <span itemprop="address"><i class="bi bi-geo-alt me-1"></i>@Model.Address</span>
            </div>
        </header>

        <!-- Professional Summary -->
        @if (!string.IsNullOrEmpty(Model.Summary))
        {
            <section class="resume-section" aria-label="Professional Summary">
                <h2>Professional Summary</h2>
                <p itemprop="description">@Model.Summary</p>
            </section>
        }

        <!-- Work Experience -->
        @if (Model.Experiences != null && Model.Experiences.Any())
        {
            <section class="resume-section" aria-label="Work Experience">
                <h2>Work Experience</h2>
                <ul class="resume-list">
                @foreach (var experience in Model.Experiences.OrderByDescending(e => e.StartDate))
                {
                    <li class="resume-item" itemscope itemtype="https://schema.org/JobPosting">
                        <div class="resume-item-header">
                            <div class="resume-item-info">
                                <div class="resume-item-title" itemprop="title">@experience.JobTitle</div>
                                <div class="resume-item-subtitle" itemprop="hiringOrganization">@experience.Company • @experience.Location</div>
                            </div>
                            <span class="resume-item-date">
                                <time itemprop="datePosted" datetime="@experience.StartDate.ToString("yyyy-MM-dd")">@experience.StartDate.ToString("MMM yyyy")</time>
                                -
                                <time itemprop="validThrough" datetime="@(experience.EndDate?.ToString("yyyy-MM-dd") ?? "")">@(experience.EndDate?.ToString("MMM yyyy") ?? "Present")</time>
                            </span>
                        </div>
                        <p class="resume-item-description" itemprop="description">@experience.Description</p>
                    </li>
                }
                </ul>
            </section>
        }

        <!-- Education -->
        @if (Model.EducationHistory != null && Model.EducationHistory.Any())
        {
            <section class="resume-section" aria-label="Education">
                <h2>Education</h2>
                <ul class="resume-list">
                @foreach (var education in Model.EducationHistory.OrderByDescending(e => e.EndDate))
                {
                    <li class="resume-item" itemscope itemtype="https://schema.org/EducationalOrganization">
                        <div class="resume-item-header">
                            <div class="resume-item-info">
                                <div class="resume-item-title" itemprop="degree">@education.Degree</div>
                                <div class="resume-item-subtitle" itemprop="name">@education.Institution</div>
                            </div>
                            <span class="resume-item-date">
                                <time itemprop="startDate" datetime="@education.StartDate.ToString("yyyy-MM-dd")">@education.StartDate.ToString("MMM yyyy")</time>
                                -
                                <time itemprop="endDate" datetime="@education.EndDate.ToString("yyyy-MM-dd")">@education.EndDate.ToString("MMM yyyy")</time>
                            </span>
                        </div>
                    </li>
                }
                </ul>
            </section>
        }

        <!-- Skills (Moved after Education) -->
        @if (Model.Skills != null && Model.Skills.Any())
        {
            <section class="resume-section skills-section" aria-label="Skills">
                <h2>Technical Skills</h2>
                <div class="skills-container">
                @foreach (var skill in Model.Skills)
                {
                    <span class="skill-tag">@skill</span>
                }
                </div>
            </section>
        }

        <!-- Projects -->
        @if (Model.Projects != null && Model.Projects.Any())
        {
            <section class="resume-section" aria-label="Projects">
                <h2>Projects</h2>
                <ul class="resume-list">
                @foreach (var project in Model.Projects.OrderByDescending(p => p.StartDate))
                {
                    <li class="resume-item" itemscope itemtype="https://schema.org/CreativeWork">
                        <div class="resume-item-header">
                            <div class="resume-item-info">
                                <div class="resume-item-title" itemprop="name">@project.ProjectName</div>
                                @if (!string.IsNullOrEmpty(project.Technologies))
                                {
                                    <div class="resume-item-subtitle">@project.Technologies</div>
                                }
                            </div>
                            @if (project.StartDate.HasValue)
                            {
                                <span class="resume-item-date">
                                    <time itemprop="dateCreated" datetime="@project.StartDate.Value.ToString("yyyy-MM-dd")">@project.StartDate.Value.ToString("MMM yyyy")</time>
                                    -
                                    <time itemprop="dateModified" datetime="@(project.EndDate?.ToString("yyyy-MM-dd") ?? string.Empty)">@(project.EndDate?.ToString("MMM yyyy") ?? "Ongoing")</time>
                                </span>
                            }
                        </div>
                        <p class="resume-item-description" itemprop="description">@project.Description</p>
                        @if (!string.IsNullOrEmpty(project.ProjectUrl))
                        {
                            <p class="project-url"><strong>URL:</strong> <a href="@project.ProjectUrl" target="_blank" itemprop="url">@project.ProjectUrl</a></p>
                        }
                    </li>
                }
                </ul>
            </section>
        }

        <!-- Certifications -->
        @if (Model.Certifications != null && Model.Certifications.Any())
        {
            <section class="resume-section" aria-label="Certifications">
                <h2>Certifications</h2>
                <ul class="resume-list">
                @foreach (var certification in Model.Certifications.OrderByDescending(c => c.DateAcquired))
                {
                    <li class="resume-item">
                        <div class="resume-item-header">
                            <div class="resume-item-title">@certification.CertificationName</div>
                            <span class="resume-item-date">
                                <time datetime="@certification.DateAcquired.ToString("yyyy-MM-dd")">@certification.DateAcquired.ToString("MMM yyyy")</time>
                            </span>
                        </div>
                    </li>
                }
                </ul>
            </section>
        }

        <!-- Languages -->
        @if (Model.Languages != null && Model.Languages.Any())
        {
            <section class="resume-section" aria-label="Languages">
                <h2>Languages</h2>
                <ul class="resume-list language-list">
                @foreach (var language in Model.Languages)
                {
                    <li class="resume-item language-item">
                        <span class="resume-item-title">@language.LanguageName</span>
                        <span class="language-level">@language.ProficiencyLevel</span>
                    </li>
                }
                </ul>
            </section>
        }
    </main>
</div>

<style>
    /* ========== BASE STYLES ========== */
    .resume-list { 
        list-style: none; 
        margin: 0; 
        padding: 0; 
    }
    
    .resume-list > li { 
        margin-bottom: 1.75rem; 
        page-break-inside: avoid; 
    }
    
    .resume-preview { 
        background: #ffffff; 
        padding: 3.5rem; 
        border-radius: 2px; 
        box-shadow: 0 2px 16px rgba(0,0,0,.06);
        max-width: 850px;
        margin: 0 auto;
        line-height: 1.6;
    }
    
    .resume-header { 
        text-align: center;
        margin-bottom: 2.5rem; 
        padding-bottom: 2rem; 
    }
    
    .resume-header h1 { 
        margin: 0 0 1.25rem 0; 
        font-weight: 700;
        font-size: 2.75rem;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }
    
    .resume-contact { 
        display: flex; 
        flex-wrap: wrap; 
        gap: 2rem; 
        justify-content: center;
        font-size: 0.95rem;
        font-weight: 500;
    }
    
    .resume-section { 
        margin-bottom: 2.5rem; 
        page-break-inside: avoid;
    }
    
    .resume-section h2 { 
        margin-bottom: 1.25rem;
        font-size: 1.35rem;
        font-weight: 700;
        letter-spacing: -0.01em;
    }
    
    .resume-section p {
        line-height: 1.7;
        margin-bottom: 0.5rem;
        color: #374151;
        font-size: 0.95rem;
    }
    
    .resume-item-header { 
        display: flex; 
        justify-content: space-between; 
        align-items: flex-start;
        gap: 1.5rem; 
        margin-bottom: 0.625rem;
    }
    
    .resume-item-info {
        flex: 1;
    }
    
    .resume-item-title { 
        font-weight: 700; 
        font-size: 1.05rem;
        margin-bottom: 0.35rem;
        line-height: 1.3;
    }
    
    .resume-item-subtitle { 
        font-size: 0.925rem;
        margin-bottom: 0.25rem;
        line-height: 1.4;
    }
    
    .resume-item-date {
        white-space: nowrap;
        font-size: 0.875rem;
        font-weight: 600;
        line-height: 1.4;
    }
    
    .resume-item-description {
        line-height: 1.7;
        margin: 0;
        font-size: 0.925rem;
        color: #4b5563;
    }
    
    .project-url {
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    .project-url a {
        text-decoration: none;
        word-break: break-all;
    }

    /* Skills section styles */
    .skills-section {
        padding: 1.75rem;
        border-radius: 4px;
        margin-bottom: 2.5rem;
    }
    
    .skills-container { 
        display: flex; 
        flex-wrap: wrap; 
        gap: 0.625rem;
        margin-top: 0.5rem;
    }
    
    .skill-tag { 
        display: inline-block;
        padding: 0.5rem 1.125rem;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.875rem;
        line-height: 1.4;
        transition: all 0.15s ease;
    }

    /* Language list styles */
    .language-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.875rem;
    }

    .language-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0 !important;
        padding: 0.5rem 0;
    }

    .language-level {
        font-size: 0.875rem;
        padding: 0.25rem 0.75rem;
        border-radius: 3px;
        font-weight: 600;
    }

    /* ========== MINIMAL THEME ========== */
    .theme-minimal .resume-header {
        border-bottom: 3px solid #000000;
    }

    .theme-minimal .resume-header h1 { 
        color: #000000;
        font-weight: 800;
    }
    
    .theme-minimal .resume-contact { 
        color: #525252;
    }
    
    .theme-minimal .resume-section h2 { 
        color: #000000; 
        text-transform: uppercase; 
        letter-spacing: 0.08em; 
        font-size: 1rem;
        font-weight: 800;
        border-bottom: 1px solid #000000;
        padding-bottom: 0.5rem;
        margin-bottom: 1.25rem;
    }
    
    .theme-minimal .resume-item-title { 
        color: #000000;
        font-weight: 700;
    }
    
    .theme-minimal .resume-item-subtitle { 
        color: #525252;
        font-weight: 500;
    }
    
    .theme-minimal .resume-item-date { 
        color: #737373;
    }
    
    .theme-minimal .resume-item-description {
        color: #525252;
    }
    
    .theme-minimal .skill-tag { 
        background: #000000; 
        color: #ffffff;
    }

    .theme-minimal .skills-section {
        background: #fafafa;
        border-left: 3px solid #000000;
        border-radius: 0;
    }

    .theme-minimal .language-level {
        background: #f5f5f5;
        color: #262626;
        font-weight: 600;
    }

    .theme-minimal .project-url a {
        color: #000000;
        font-weight: 600;
    }

    /* ========== CLASSIC THEME ========== */
    .theme-classic .resume-preview {
        box-shadow: 0 1px 8px rgba(0,0,0,.08);
    }

    .theme-classic .resume-header {
        border-bottom: 4px double #2c3e50;
        padding-bottom: 1.75rem;
    }

    .theme-classic .resume-header h1 { 
        color: #2c3e50;
        font-family: 'Georgia', 'Times New Roman', serif;
        font-weight: 700;
        letter-spacing: 0.015em;
    }
    
    .theme-classic .resume-contact { 
        color: #34495e;
        font-family: 'Georgia', 'Times New Roman', serif;
    }
    
    .theme-classic .resume-section h2 { 
        color: #2c3e50; 
        font-family: 'Georgia', 'Times New Roman', serif;
        border-bottom: 2px solid #2c3e50;
        padding-bottom: 0.375rem;
        font-weight: 700;
        letter-spacing: 0.01em;
    }
    
    .theme-classic .resume-item-title { 
        color: #2c3e50;
        font-weight: 700;
    }
    
    .theme-classic .resume-item-subtitle { 
        color: #34495e;
        font-weight: 500;
    }
    
    .theme-classic .resume-item-date { 
        color: #5d6d7e;
    }
    
    .theme-classic .resume-item-description {
        color: #34495e;
    }
    
    .theme-classic .skill-tag { 
        background: #2c3e50; 
        color: #ffffff;
        font-weight: 600;
    }

    .theme-classic .skills-section {
        background: #f8f9fa;
        border: 1px solid #d5d8db;
        border-left: 3px solid #2c3e50;
    }

    .theme-classic .language-level {
        background: #ecf0f1;
        color: #2c3e50;
        font-weight: 600;
    }

    .theme-classic .project-url a {
        color: #2c3e50;
        font-weight: 600;
    }

    /* ========== MODERN THEME ========== */
    .theme-modern .resume-preview {
        box-shadow: 0 4px 24px rgba(79, 70, 229, 0.08);
    }

    .theme-modern .resume-header {
        border-bottom: none;
        background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
        margin: -3.5rem -3.5rem 2.5rem -3.5rem;
        padding: 3.5rem 3.5rem 2.5rem 3.5rem;
        border-radius: 2px 2px 0 0;
        border-bottom: 4px solid #4f46e5;
    }

    .theme-modern .resume-header h1 { 
        color: #1e1b4b;
        font-weight: 800;
        letter-spacing: -0.03em;
    }
    
    .theme-modern .resume-contact { 
        color: #4338ca;
        font-weight: 600;
    }
    
    .theme-modern .resume-section h2 { 
        color: #4f46e5; 
        font-weight: 800;
        position: relative;
        padding-left: 1.25rem;
        letter-spacing: -0.02em;
    }

    .theme-modern .resume-section h2::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0.15rem;
        bottom: 0.15rem;
        width: 4px;
        background: linear-gradient(180deg, #4f46e5 0%, #7c3aed 100%);
        border-radius: 2px;
    }
    
    .theme-modern .resume-item-title { 
        color: #1e1b4b;
        font-weight: 700;
    }
    
    .theme-modern .resume-item-subtitle { 
        color: #5b21b6;
        font-weight: 500;
    }
    
    .theme-modern .resume-item-date { 
        color: #6366f1;
    }
    
    .theme-modern .resume-item-description {
        color: #4b5563;
    }
    
    .theme-modern .skill-tag { 
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        color: #ffffff;
        box-shadow: 0 2px 8px rgba(79, 70, 229, 0.15);
        font-weight: 700;
    }

    .theme-modern .skills-section {
        background: linear-gradient(135deg, #f0f4ff 0%, #e0e7ff 100%);
        border: 1px solid #c7d2fe;
        border-left: 4px solid #4f46e5;
    }

    .theme-modern .language-level {
        background: linear-gradient(135deg, #eef2ff 0%, #ddd6fe 100%);
        color: #4338ca;
        font-weight: 700;
    }

    .theme-modern .resume-item {
        position: relative;
        padding-left: 1rem;
        border-left: 2px solid #e0e7ff;
        transition: all 0.2s ease;
    }

    .theme-modern .resume-item:hover {
        border-left-color: #6366f1;
        background: #faf5ff05;
    }

    .theme-modern .project-url a {
        color: #4f46e5;
        font-weight: 700;
    }

    /* Print styles */
    @@media print {
        .no-print { display: none !important; }
        body { background: white !important; }
        .resume-preview { 
            box-shadow: none !important; 
            margin: 0 !important; 
            padding: 1.5rem !important;
            max-width: 100% !important;
        }
        .container { max-width: 100% !important; padding: 0 !important; }
        .body-section { padding: 0 !important; }
        header, footer { display: none !important; }
        .theme-modern .resume-header {
            margin: 0 !important;
            padding: 2rem 0 1.5rem 0 !important;
            background: white !important;
        }
        .skill-tag {
            break-inside: avoid;
            box-shadow: none !important;
        }
        .resume-section {
            break-inside: avoid;
        }
        .resume-item {
            break-inside: avoid;
        }
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .resume-preview {
            padding: 2rem;
        }
        
        .resume-header h1 {
            font-size: 2.25rem;
        }
        
        .resume-item-header {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .resume-item-date {
            align-self: flex-start;
        }
        
        .language-list {
            grid-template-columns: 1fr;
        }

        .theme-modern .resume-header {
            margin: -2rem -2rem 2rem -2rem;
            padding: 2rem 2rem 1.5rem 2rem;
        }
    }
</style>

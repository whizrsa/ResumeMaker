@model IEnumerable<ResumeMaker.Models.Resume>

@{
    ViewData["Title"] = "My Resumes";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">My Resumes</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Resume
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><i class="bi bi-person me-1"></i>Name</th>
                        <th><i class="bi bi-envelope me-1"></i>Email</th>
                        <th><i class="bi bi-telephone me-1"></i>Phone</th>
                        <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.FullName</strong>
                            </td>
                            <td>@item.Email</td>
                            <td>@item.CellPhoneNumber</td>
                            <td>
                                <div class="action-buttons justify-content-center">
                                    <a asp-action="View" asp-route-id="@item.Id" class="btn btn-info btn-sm"
                                       title="View Resume">
                                        View
                                    </a>
                                    <a asp-action="Edit" asp-route-resumeId="@item.Id" class="btn btn-primary btn-sm"
                                       title="Edit Resume">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete this resume?')"
                                       title="Delete Resume">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" style="margin-top: 2rem;">
            <h4 class="mb-2">No resumes yet</h4>
            <p class="mb-3">Start by creating your first professional resume.</p>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Resume</a>
        </div>
    }
</div>


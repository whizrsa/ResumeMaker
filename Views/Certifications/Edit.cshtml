@model ResumeMaker.Models.Certification

@{
    ViewData["Title"] = "Edit Certification";
}

<div class="container">
    <h3>Edit Certification</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ResumeId" />

        <div class="mb-3">
            <label class="form-label">Certification Name</label>
            <input class="form-control" asp-for="CertificationName" />
            <span asp-validation-for="CertificationName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Date Acquired</label>
            <input class="form-control" asp-for="DateAcquired" type="date" />
        </div>

        <div class="d-flex gap-2 mt-3">
            <a asp-controller="Home" asp-action="Edit" asp-route-resumeId="@Model.ResumeId" class="btn btn-secondary">Cancel</a>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>
